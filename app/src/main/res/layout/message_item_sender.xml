<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@color/blue">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sender_item_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/usa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_mutate_background="true"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/message_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="HI , How Are you ?"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/sender_item_user_image"
        app:layout_constraintTop_toTopOf="@+id/sender_item_user_image" />

    <TextView
        android:id="@+id/tans_messge_item_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Traslated Text"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/message_item_text"
        app:layout_constraintTop_toBottomOf="@+id/message_item_text"
        app:layout_constraintVertical_bias="0.51" />

    <ImageView
        android:id="@+id/message_item_voice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tans_messge_item_receiver"
        app:layout_constraintStart_toEndOf="@+id/tans_messge_item_receiver"
        app:layout_constraintTop_toTopOf="@+id/tans_messge_item_receiver"
        app:srcCompat="@drawable/ic_baseline_volume_up_24"
        app:tint="@color/darkBlue" />
</androidx.constraintlayout.widget.ConstraintLayout>